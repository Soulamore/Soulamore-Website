rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Applications collection - allow anyone to write (for form submissions)
    match /applications/{document=**} {
      allow read: if request.auth != null; // Only authenticated users can read
      allow create: if true; // Anyone can create (submit forms)
      allow update, delete: if request.auth != null; // Only authenticated users can update/delete
    }
    
    // Contacts collection - allow anyone to write (for contact forms)
    match /contacts/{document=**} {
      allow read: if request.auth != null;
      allow create: if true; // Anyone can create (submit contact forms)
      allow update, delete: if request.auth != null;
    }
    
    // Confessions collection - allow writes (anonymous)
    match /confessions/{document=**} {
      allow read: if request.auth != null;
      allow create: if true;
      allow update, delete: if request.auth != null;
    }
    
    // Vents collection - allow writes (anonymous)
    match /vents/{document=**} {
      allow read: if request.auth != null;
      allow create: if true;
      allow update, delete: if request.auth != null;
    }
    
    // Postcards collection - allow writes (public)
    match /postcards/{document=**} {
      allow read: if true; // Public read
      allow create: if true; // Public write
      allow update: if request.auth != null;
      allow delete: if request.auth != null;
    }
    
    // Default: deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}

