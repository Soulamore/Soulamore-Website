rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // --- USER PROFILES ---
    match /users/{userId} {
      allow read: if request.auth != null; // Any authenticated user can read
      allow create: if request.auth != null && request.auth.uid == userId; // Users can create their own profile
      allow update, delete: if request.auth != null && request.auth.uid == userId; // Users can only update/delete their own profile
    }
    
    // --- ACTIVE FEATURES (Backend Connected) ---

    // Peer Application Forms
    match /peers/{document=**} {
      allow read: if request.auth != null;
      allow create: if true; // Public submission
      allow update, delete: if request.auth != null;
    }

    // Psychologist Application Forms
    match /psychologists/{document=**} {
      allow read: if request.auth != null;
      allow create: if true; // Public submission
      allow update, delete: if request.auth != null;
    }

    // Contact Forms (Company Page)
    match /contacts/{document=**} {
      allow read: if request.auth != null;
      allow create: if true; // Public submission
      allow update, delete: if request.auth != null;
    }

    // Confession Box (Tools & Topics)
    match /confessions/{document=**} {
      allow read: if request.auth != null;
      allow create: if true; // Anonymous submission
      allow update, delete: if request.auth != null;
    }

    // Newsletter Subscriptions
    match /newsletters/{document=**} {
      allow read: if request.auth != null;
      allow create: if true; // Public subscription
      allow update, delete: if request.auth != null;
    }

    // Soulamore Away (Postcards)
    match /postcards/{document=**} {
      allow read: if true; // Public read (Gallery)
      allow create: if true; // Public send
      allow update, delete: if request.auth != null;
    }

    // Problem Wall (Public Anonymous Notes)
    match /problem-wall-notes/{document=**} {
       allow read: if true;
       allow create: if true; // Anonymous posts allowed
       allow update: if true; // Allow reactions (increment)
       // For better security later: allow update: if request.resource.data.diff(resource.data).affectedKeys().hasOnly(['hearts', 'flowers', 'candles']);
       allow delete: if false; // Mods only (via Admin SDK usually, or request.auth.token.admin == true)
    }

    // --- NEWLY REQUESTED FEATURES (Connecting Now) ---

    // Vent Box
    match /vents/{document=**} {
      allow read: if request.auth != null;
      allow create: if true;
      allow update, delete: if request.auth != null;
    }

    // Echo Space (Loneliness Page)
    match /echoes/{document=**} {
      allow read: if true; // Public read allowed for potential "Wall of Echoes"
      allow create: if true;
      allow update, delete: if request.auth != null;
    }

    // --- FUTURE / PLACEHOLDER FEATURES ---
    
    // Worry Shredder & Later Box
    match /shreds/{document=**} {
      allow read: if request.auth != null;
      allow create: if true;
      allow update, delete: if request.auth != null;
    }
    match /worries/{document=**} {
      allow read: if request.auth != null;
      allow create: if true;
      allow update, delete: if request.auth != null;
    }

    // 5-Step Reset (Gratitude/Inputs)
    match /resets/{document=**} {
      allow read: if request.auth != null;
      allow create: if true;
      allow update, delete: if request.auth != null;
    }

    // Legacy/Fallback Collection
    match /applications/{document=**} {
      allow read: if request.auth != null;
      allow create: if true;
      allow update, delete: if request.auth != null;
    }

    // Presence System (Live User Count)
    match /active_souls/{document=**} {
      allow read, write: if true; // Public for anonymous presence
    }

    // SoulBot Conversations
    match /soulbot_conversations/{conversationId} {
      // Allow read: authenticated users can read their own conversations, or anyone can read anonymous conversations
      allow read: if request.auth != null && resource.data.userId == request.auth.uid 
                  || resource.data.userId == null 
                  || resource.data.userId == 'anonymous';
      
      // Allow create: anyone can create a conversation (anonymous or authenticated)
      allow create: if true;
      
      // Allow update:
      // - If conversation has userId == null or 'anonymous' (anonymous user), allow updates from anyone
      // - If conversation has userId (authenticated), only allow updates from that user
      allow update: if resource.data.userId == null 
                    || resource.data.userId == 'anonymous'
                    || (request.auth != null && resource.data.userId == request.auth.uid);
      
      // Allow delete: only authenticated users can delete their own conversations
      allow delete: if request.auth != null && resource.data.userId == request.auth.uid;
    }

    // Therapists Collection (for therapist recommendations)
    match /therapists/{document=**} {
      allow read: if true; // Public read for therapist listings
      allow create, update, delete: if request.auth != null; // Only authenticated admins can modify
    }

    // SoulBot Usage Tracking (for rate limiting)
    match /soulbot_usage/{usageId} {
      // Allow read: users can read their own usage stats
      allow read: if request.auth != null && resource.data.userId == request.auth.uid 
                  || resource.data.userId == null;
      
      // Allow create/update: anyone can create/update usage tracking (for rate limiting)
      allow create, update: if true;
      
      // Allow delete: only authenticated users can delete their own usage
      allow delete: if request.auth != null && resource.data.userId == request.auth.uid;
    }

    // Peer Bookings
    match /peer_bookings/{bookingId} {
      // Allow read: users can read their own bookings, peers can read bookings for them
      allow read: if request.auth != null && (resource.data.userId == request.auth.uid || resource.data.peerId == request.auth.uid);
      
      // Allow create: authenticated users can create booking requests
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      
      // Allow update: users can update their own pending bookings, peers can confirm/cancel their bookings
      allow update: if request.auth != null && (
        (resource.data.userId == request.auth.uid && resource.data.status == 'pending_payment') ||
        (resource.data.peerId == request.auth.uid && resource.data.status in ['pending_payment', 'confirmed'])
      );
      
      // Allow delete: only users can delete their own pending bookings
      allow delete: if request.auth != null && resource.data.userId == request.auth.uid && resource.data.status == 'pending_payment';
    }

    // Peer/Psychologist Availability Schedules
    match /peer_availability/{peerId} {
      // Allow read: public read for checking availability
      allow read: if true;
      
      // Allow create/update: peers and psychologists can manage their own availability
      allow create, update: if request.auth != null && request.auth.uid == peerId;
      
      // Allow delete: peers and psychologists can delete their own availability
      allow delete: if request.auth != null && request.auth.uid == peerId;
    }

    // Roles Collection (for peer/psychologist verification)
    match /roles/{userId} {
      // Allow read: authenticated users can read their own role
      allow read: if request.auth != null && request.auth.uid == userId;
      
      // Allow create/update: only admins can set roles (restrict in production)
      allow create, update: if request.auth != null;
      
      // Allow delete: only admins can delete roles
      allow delete: if request.auth != null;
    }

    // Peer Pricing Plans
    match /peer_plans/{planId} {
      // Allow read: public read for pricing plans
      allow read: if true;
      
      // Allow create/update: admins or peers can manage plans (restrict in production)
      allow create, update: if request.auth != null;
      
      // Allow delete: admins or peers can delete plans
      allow delete: if request.auth != null;
    }

    // Payment Records
    match /payments/{paymentId} {
      // Allow read: users can read their own payment records
      allow read: if request.auth != null && resource.data.userId == request.auth.uid;
      
      // Allow create: system can create payment records (after successful payment)
      allow create: if request.auth != null;
      
      // Allow update: only admins or system can update payment records
      allow update: if request.auth != null;
      
      // Allow delete: no one can delete payment records (audit trail)
      allow delete: if false;
    }
    
    // Default: Deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
